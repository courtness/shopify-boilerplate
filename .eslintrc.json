{
  "env": {
    "browser": false,
    "es6": true,
    "node": false
  },
  "extends": ["prettier"],
  "plugins": ["import", "prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "prettier/prettier": ["error"],
    "quotes": [2, "backtick"],
    "semi": [2, "always"]
  },
  "settings": {
    "node": {
      "extensions": [".js"]
    }
  }
}
